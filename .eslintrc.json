{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "callback-return": [
      "error",
      ["done", "proceed", "next", "onwards", "callback", "cb"]
    ],
    "no-useless-catch": "off",
    "linebreak-style": 0,
    "no-console": ["off"]
  }
}
