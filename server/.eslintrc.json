{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12
    // "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "callback-return": [
      "error",
      ["done", "proceed", "next", "onwards", "callback", "cb"]
    ],
    "no-useless-catch": "off",
    "linebreak-style": 0,
    "no-console": ["off"],
    "semi": "off"
  }
}
