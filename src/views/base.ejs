<%- include('includes/header') %>

<div class="text-center center-div" id="login">
  <div class="container w-25 border py-5">
    <div class="title pb-5">
      <h2 class="font-weight-bold">Login System</h2>
      <span>Log in for the existing user</span>
      <% if(locals.logout) { %>
      <div class="alert alert-success text-center"><%= logout %></div>
      <% } %>
    </div>

    <form action="login" method="POST" class="pt-3">
      <!-- Email -->
      <div class="form-group">
        <input
          type="email"
          class="form-control"
          placeholder="email"
          name="email"
          id=""
        />
        <small class="form-text text-muted text-left">
          Enter email address
        </small>
      </div>

      <!-- Password -->
      <div class="form-group">
        <input
          type="password"
          class="form-control"
          placeholder="password"
          name="password"
          id=""
        />
        <small class="form-text text-muted text-left">
          Enter password
        </small>
      </div>

      <!-- Submit -->
      <button type="submit" class="btn btn-success rounded-pill">Login</button>
    </form>
  </div>
</div>

<%- include('includes/footer') %>
